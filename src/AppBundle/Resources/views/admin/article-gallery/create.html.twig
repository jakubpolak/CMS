{% extends '@App/admin/layout.html.twig' %}

{% block heading %}{{ 'Články'|trans({}, 'admin') }}{% endblock %}

{% block breadcrumbs %}
    &raquo; <a href="{{ path('admin_article_index') }}">{{ 'Články'|trans({}, 'admin') }}</a>
    &raquo; <a href="{{ path('admin_article_update', {'id': articleId}) }}">{{ 'Upraviť článok'|trans({}, 'admin') }}</a>
    &raquo; {{ 'Nový obrázok'|trans({}, 'admin') }}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">{{ 'Nový obrázok'|trans({}, 'admin') }}</div>
                <div class="panel-body">
                    <form enctype="multipart/form-data" role="form" method="{{ form.vars.method }}" action="{{ form.vars.action }}">
                        {{ form_widget(form) }}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
