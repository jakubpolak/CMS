{% extends '@App/admin/layout.html.twig' %}

{% block heading %}{{ 'Články'|trans({}, 'admin') }}{% endblock %}

{% block breadcrumbs %}&raquo; <a href="{{ path('admin_article_index') }}">{{ 'Články'|trans({}, 'admin') }}</a> &raquo; {{ 'Upraviť článok'|trans({}, 'admin') }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            {% if images is empty %}
                <div class="alert alert-info">{{ 'Žiadne obrázky.'|trans({}, 'admin') }}</div>
            {% else %}
                <div class="panel panel-default">
                    <div class="panel-heading">{{ 'Zoznam obrázkov'|trans({}, 'admin') }}</div>
                    <div class="panel-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th class="col-lg-8">{{ 'Obrázok'|trans({}, 'admin') }}</th>
                                    <th class="col-lg-2">{{ 'Pozícia'|trans({}, 'admin') }}</th>
                                    <th class="col-lg-1">&nbsp;</th>
                                    <th class="col-lg-1">&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for image in images %}
                                    <tr>
                                        <td><img src="{{ (upload_dir ~ '/' ~ image.name)|imagine_filter('thumb_small') }}"></td>
                                        <td class="app-center">
                                            <a href="{{ url('admin_articleGallery_update', {'imageId': image.id, 'articleId': image.article.id}) }}">{{ 'Upraviť'|trans({}, 'admin') }}</a>
                                        </td>
                                        <td class="app-center">
                                            <a href="{{ url('admin_articleGallery_delete', {'imageId': image.id, 'articleId': image.article.id}) }}">{{ 'Zmazať'|trans({}, 'admin') }}</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="row app-margin-bottom-15">
        <div class="col-lg-12">
            <div class="btn-group pull-right" role="group">
                <a href="{{ path('admin_articleGallery_create', {'articleId': article.id}) }}" type="button" class="btn btn-primary btn-sm">{{ 'Nový obrázok'|trans({}, 'admin') }}</a>
            </div>
        </div>
    </div>

    {% if languagesCount != 0 %}
        <div class="row">
            <div class="col-lg-12">
                {% if slugs is empty %}
                    <div class="alert alert-info">{{ 'Žiadne slugy.'|trans({}, 'admin') }}</div>
                {% else %}
                    <div class="panel panel-default">
                        <div class="panel-heading">{{ 'Zoznam slugov'|trans({}, 'admin') }}</div>
                        <div class="panel-body">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th class="col-lg-8">{{ 'Slug'|trans({}, 'admin') }}</th>
                                        <th class="col-lg-2">{{ 'Jazyk'|trans({}, 'admin') }}</th>
                                        <th class="col-lg-1">&nbsp;</th>
                                        <th class="col-lg-1">&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for slug in slugs %}
                                        <tr>
                                            <td>{{ slug.content }}</td>
                                            <td>{{ slug.language.code }}</td>
                                            <td class="app-center">
                                                <a href="{{ url('admin_slug_update', {'entityName': 'article', 'entityId': article.id, 'id': slug.id}) }}">{{ 'Upraviť'|trans({}, 'admin') }}</a>
                                            </td>
                                            w<td class="app-center">
                                                <a href="{{ url('admin_slug_delete', {'entityName': 'article', 'entityId': article.id, 'id': slug.id}) }}">{{ 'Zmazať'|trans({}, 'admin') }}</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    {% endif %}

    {% if languagesCount > slugs|length %}
        <div class="row app-margin-bottom-15">
            <div class="col-lg-12">
                <div class="btn-group pull-right" role="group">
                    <a href="{{ path('admin_slug_create', {'entityName': 'article', 'entityId': article.id}) }}" type="button" class="btn btn-primary btn-sm">{{ 'Nový slug'|trans({}, 'admin') }}</a>
                </div>
            </div>
        </div>
    {% endif %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">{{ 'Upraviť článok'|trans({}, 'admin') }}</div>
                <div class="panel-body">
                    <form role="form" method="{{ form.vars.method }}" action="{{ form.vars.action }}">
                        {{ form_widget(form) }}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
