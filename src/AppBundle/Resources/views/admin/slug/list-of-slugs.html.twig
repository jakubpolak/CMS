{% if isSlugsEnabled() == true %}
    {% if languagesCount != 0 %}
        <div class="row">
            <div class="col-lg-12">
                {% if slugs is empty %}
                    <div class="alert alert-info">{{ 'Žiadne slugy.'|trans({}, 'admin') }}</div>
                {% else %}
                    <div class="panel panel-default">
                        <div class="panel-heading">{{ 'Zoznam slugov'|trans({}, 'admin') }}</div>
                        <div class="panel-body">
                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <th class="col-lg-8">{{ 'Slug'|trans({}, 'admin') }}</th>
                                    <th class="col-lg-2">{{ 'Jazyk'|trans({}, 'admin') }}</th>
                                    <th class="col-lg-1">&nbsp;</th>
                                    <th class="col-lg-1">&nbsp;</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for slug in slugs %}
                                    <tr>
                                        <td>{{ slug.content }}</td>
                                        <td>{{ slug.language.code }}</td>
                                        <td class="app-center">
                                            <a href="{{ url('admin_slug_update', {'entityName': entityName, 'entityId': entityId, 'id': slug.id}) }}">{{ 'Upraviť'|trans({}, 'admin') }}</a>
                                        </td>
                                        <td class="app-center">
                                            <a href="{{ url('admin_slug_delete', {'entityName': entityName, 'entityId': entityId, 'id': slug.id}) }}">{{ 'Zmazať'|trans({}, 'admin') }}</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    {% endif %}
{% endif %}
