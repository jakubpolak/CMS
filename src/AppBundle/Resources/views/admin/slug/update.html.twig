{% extends '@App/admin/layout.html.twig' %}

{% block heading %}{% spaceless %}
    {% if entityName == 'article' %}
        {{ 'Články'|trans({}, 'admin') }}
    {% endif %}
{% endspaceless %}{% endblock %}

{% block breadcrumbs %}{% spaceless %}
    {% if entityName == 'article' %}
        &raquo; <a href="{{ path('admin_article_index') }}">{{ 'Články'|trans({}, 'admin') }}</a>
        &raquo; <a href="{{ path('admin_article_update', {'id': entityId}) }}">{{ 'Upraviť článok'|trans({}, 'admin') }}</a>
        &raquo; {{ 'Upraviť slug'|trans({}, 'admin') }}
    {% endif %}
{% endspaceless %}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">{{ 'Upraviť slug'|trans({}, 'admin') }}</div>
                <div class="panel-body">
                    <form role="form" method="{{ form.vars.method }}" action="{{ form.vars.action }}">
                        {{ form_widget(form) }}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
