{% extends '@App/admin/layout.html.twig' %}

{% block heading %}{{ 'Statické stránky'|trans({}, 'admin') }}{% endblock %}

{% block breadcrumbs %}&raquo; {{ 'Statické stránky'|trans({}, 'admin') }}{% endblock %}

{% block content %}
    <div class="row app-margin-bottom-15">
        <div class="col-lg-12">
            <div class="btn-group pull-right" role="group">
                <a href="{{ path('admin_staticPage_create') }}" type="button" class="btn btn-default btn-md">{{ 'Nová statická stránka'|trans({}, 'admin') }}</a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">{{ 'Statické stránky'|trans({}, 'admin') }}</div>
                <div class="panel-body">
                    {% if staticPages|length == 0 %}
                        <div class="alert alert-info">{{ 'Žiadne statické stránky.'|trans({}, 'admin') }}</div>
                    {% else %}
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th class="col-lg-8">{{ 'Nadpis'|trans({}, 'admin') }}</th>
                                <th class="col-lg-2 app-center">{{ 'Aktívny'|trans({}, 'admin') }}</th>
                                <th class="col-lg-1">&nbsp;</th>
                                <th class="col-lg-1">&nbsp;</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for staticPage in staticPages %}
                                <tr>
                                    <td>{{ staticPage.heading }}</td>
                                    <td class="app-center">{{ bool(staticPage.isActive, 'admin') }}</td>
                                    <td class="app-center">
                                        <a href="{{ url('admin_staticPage_update', {'id': staticPage.id}) }}">{{ 'Upraviť'|trans({}, 'admin') }}</a>
                                    </td>
                                    <td class="app-center">
                                        <a href="{{ url('admin_staticPage_delete', {'id': staticPage.id}) }}">{{ 'Zmazať'|trans({}, 'admin') }}</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}