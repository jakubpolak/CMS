{% extends '@App/admin/layout.html.twig' %}

{% block heading %}{{ 'Používatelia'|trans({}, 'admin') }}{% endblock %}

{% block breadcrumbs %}&raquo; <a href="{{ path('admin_user_index') }}">{{ 'Používatelia'|trans({}, 'admin') }}</a> &raquo; {{ 'Nový'|trans({}, 'admin') }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">{{ 'Nový používateľ'|trans({}, 'admin') }}</div>
                <div class="panel-body">
                    <form role="form" method="{{ form.vars.method }}" action="{{ form.vars.action }}">
                        {{ form_widget(form) }}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
